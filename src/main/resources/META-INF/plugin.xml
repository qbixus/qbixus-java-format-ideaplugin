<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin require-restart="true">
    <id>com.github.qbixus.qbixus-java-format.intellij</id>
    <name>IntelliJ plugin for qbixus-java-format</name>
    <vendor>qbixus</vendor>

    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <formattingService
                implementation="com.github.qbixus.qbixusjavaformat.intellij.GoogleJavaFormatFormattingService"/>

        <backgroundPostStartupActivity
                implementation="com.github.qbixus.qbixusjavaformat.intellij.InitialConfigurationStartupActivity"/>

        <projectConfigurable
                instance="com.github.qbixus.qbixusjavaformat.intellij.GoogleJavaFormatConfigurable"
                id="com.github.qbixus.qbixusjavaformat.intellij.settings"
                displayName="qbixus-java-format IntelliJ Settings"/>

        <projectService
                serviceImplementation="com.github.qbixus.qbixusjavaformat.intellij.QbixusJavaFormatSettings"/>

        <projectService serviceImplementation="com.github.qbixus.qbixusjavaformat.intellij.JreConfigurationChecker"/>

        <notificationGroup displayType="STICKY_BALLOON" id="Enable qbixus-java-format"
                           isLogByDefault="false"/>

        <notificationGroup displayType="STICKY_BALLOON" id="Configure JRE for qbixus-java-format"
                           isLogByDefault="true"/>

        <notificationGroup displayType="BALLOON" id="qbixus-java-format parsing error"
                           isLogByDefault="false"/>
    </extensions>
</idea-plugin>
